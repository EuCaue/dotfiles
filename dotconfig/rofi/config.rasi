#inputbar {
    text-color: @foreground;
    padding:      10px;
}

#case-indicator {
    spacing:    0;
    text-color: @foreground;
}

#element-icon {
  size: 1.3em;
}

#entry {
    text-color: @cya;
    placeholder: "Type Here...";
}

#prompt {
    spacing:    0;
    text-color: #c3c3c3;
}

#inputbar {
    children:   [ prompt,textbox-prompt-colon,entry,case-indicator ];
}

#textbox-prompt-colon {
    expand:     false;
    str:        ":";
    margin:     0px 0.3em 0em 0em ;
    text-color: #c3c3c3;
}

