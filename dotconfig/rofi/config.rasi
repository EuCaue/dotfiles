configuration {
  drun-display-format: "{name}";
  font: "NK57 Monospace 13";
  modi: "window,run,drun,emoji,calc";
  show-icons: true;
  eh: 1;
  sort: true;
  case-sensitivity: false; 
  sorting-method: "fzf";
  hide-scrollbar: true;
  terminal: "alacritty";
  display-drun: "󰀻 ";
  display-run: " 󱓞 ";
  display-window: " 﩯  Window";
  display-Network: "󰖩 ";
  display-emoji: "󰞅 ";
  display-calc: "󰃬 ";
  sidebar-mode: false;
  hover-select: true;
}



* {
    bg:  #00000090;
    cur: #99c1f1;
    fgd: #ffffff;
    cmt: #5e5c64;
    cya: #ffffff;
    grn: #1161cb;
    ora: #1161cb;
    pur: #dc8add;
    red: #a51d2d;
    yel: #e5a50a;


    foreground: @fgd;
    background: @bg;
    active-background: @grn;
    urgent-background: @red;

    selected-background: @active-background;
    selected-urgent-background: @urgent-background;
    selected-active-background: @active-background;
    separatorcolor: @active-background;
    bordercolor: @ora;
  
}

#window {
    background-color: @background;
    border: 3;
    border-radius: 0;
    width: 800px;
    border-color: @bordercolor;
    padding: 5;
}

